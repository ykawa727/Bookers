<body>

  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>

　　<% @books.each do |b| %>
    <tbody>
      <tr>
        <td><%= b.title %></td>
        <td><%= b.body %></td>
        <td><%= link_to 'Show', book_path(b) %></td>
        <td><%= link_to 'Edit', edit_book_path(b) %></td>
        <td><%= link_to 'Destroy', book_path(b), method: :delete, "data-confirm" => "are you sure?" %></td>
      </tr>
    </tbody>
    <% end %>
  </table>

  <h2>New book</h2>
  <% if @book.errors.any? %>
    <%= @book.errors.count %>error,Please fill in the fields:
    <% @book.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>

  <%= form_with model:@book, local:true do |f| %>

　<div class="field">Title</div>
  <%= f.text_field :title %>

  <div class="field">Body</div>
  <%= f.text_area :body %>

  <div class="actions"><%= f.submit 'Create Book' %></div>

  <% end %>

</body>